mixin placeForm()
	button.btn#btnBack(style='display:none')
		i.icon-chevron-left
	form#placeForm.span8(action='/place', method='POST', enctype='multipart/form-data', style='display:none')
		input#yakcatInput(type='hidden', name='yakcatInput', value='') 
		input#placeInput(type='hidden', name='placeInput', value='')
		input#latitude(type="hidden",data-provide="typeahead", name="latitude")
		input#longitude(type="hidden",data-provide="typeahead", name="longitude")
		input#update(type="hidden",data-provide="typeahead", name="update", value='0')
		input#objid(type="hidden",data-provide="typeahead", name="objid", value='0')

		legend Ajouter une place
		div.control-group
			div.controls
				label Titre 
				input.big.hashtagMaker(type='text', name='title', id='title', placeholder='Opéra Bastille, Restaurant du Coin #BonneBouffe2012' )
				label Description
				textarea#content.span8.hashtagMaker(name='content', placeholder="Quelques détails sur la place à ajouter, avec la possibilité d'ajouter des #hashtags.",rows='3')	
				label Licence
				input.hashtagMaker(type='text', name='licence', id='licence', placeholder='Open Source') 
				.col2
					label Origine
					input.hashtagMaker(type='text', name='origine', id='origine', placeholder='Yakwala')
				label(for='Place') Adresse
				.input-append
					input.big#place(type="text",data-provide="typeahead", name="place", autocomplete="off", placeholder="Cliquez sur la carte ou entrer l'adresse") 
					button.btn#btn-place-adder(type="button") Ajouter
				label(for='category') Thèmes
				input#yakcat(type="text", data-provide="typeahead", name="yakcat", autocomplete="off", placeholder='Un ou plusieurs thème')
				.col2
					label Free Tags
					input#freetag(type="text", data-provide="typeahead", name="freetag",placeholder='Free tags séparés par des virgules')
			
				label(for='picture') Photo
				span#picturePreview
				input#picture(type="file",style="display:block",name="picture")
			div.control-group
				div.controls
					label.checkbox 
						input#validate(type="checkbox", name="validate", checked="true") 
						| Valider la place
			div.control-group
				div.controls
					button.btn.btn-large.btn-inverse(type='submit', name='submit', id='submit', value='Envoyer') Envoyer
